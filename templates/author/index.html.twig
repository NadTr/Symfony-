{% extends 'base.html.twig' %}

{% block title %}Author index{% endblock %}

{% block body %}
    <h1 class="title">Author index</h1>

    <table class="table is-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.name }}</td>
                <td>
                    <a class="btn button is-info" href="{{ path('author.show', {'id': author.id}) }}">show</a>
                    <a class="btn button is-dark" href="{{ path('author.edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn button is-primary" href="{{ path('author.new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Tea{% endblock %}

{% block body %}
    <h1>Tea</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ tea.name }}</td>
            </tr>
            <tr>
                <th>Origine</th>
                <td>{{ tea.origin }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ tea.color }}</td>
            </tr>
            <tr>
                <th>Buveurs</th>
                <td><ul>
                  {% for drinker in tea.readers %}
                      <li>drinker.name</li>
                {% endfor %}
              </ul></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tea.index') }}">back to list</a>

    <a href="{{ path('tea.edit', {'id': tea.id}) }}">edit</a>

    {{ include('tea/_delete_form.html.twig') }}
{% endblock %}

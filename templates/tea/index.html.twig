{% extends 'base.html.twig' %}

{% block title %}Tea index{% endblock %}

{% block body %}
    <h1 class="title">Tea index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Origin</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tea in teas %}
            <tr>
                <td>{{ tea.id }}</td>
                <td>{{ tea.name }}</td>
                <td>{{ tea.origin }}</td>
                <td>{{ tea.color }}</td>
                <td>
                    <a class="btn button is-info" href="{{ path('tea.show', {'id': tea.id}) }}">show</a>
                    <a class="btn button is-dark" href="{{ path('tea.edit', {'id': tea.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn button is-primary" href="{{ path('tea.new') }}">Create new</a>
{% endblock %}
